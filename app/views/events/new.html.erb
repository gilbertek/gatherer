<h1>New Event</h1>

<%= form_for @event do  |f| %>
  <div>
    <% @event.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit id: 'submit' %>
  <%= f.submit id: 'cancel' %>
<% end %>
