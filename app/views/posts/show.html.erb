<h1>@post.title</h1>

<p>
  <strong>Post:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Post:</strong>
  <%= @post.text %>
</p>

<p>
  <strong>Date published:</strong>
  <%= @post.publish_date %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.email %>
</p>

<% if current_user.admin? %>
  <%= link_to 'Delete this post', post_path(@post),
    method: :delete %>
<% end %>
<p>
</p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', root_path %>

